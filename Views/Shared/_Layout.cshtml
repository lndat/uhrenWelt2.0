<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - uhrenWelt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/uhrenWelt.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark p-1" id="headerNav">
            <div class="container-fluid">
                <a class="navbar-brand d-block d-lg-none" asp-controller="Home" asp-action="Index">
                    <img src="~/Img/UhrenWelt.png" height="80" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav mx-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link mx-2 active" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item d-none d-lg-block">
                            <a class="nav-link mx-2" asp-controller="Home" asp-action="Index">
                                <img src="~/Img/UhrenWelt.png" height="90" />
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" asp-controller="Cart" asp-action="ShowCart">Cart</a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link mx-2 dropdown-toggle" href="#" id="navbarDropdownLogInRegister"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Account
                                </a>
                                <ul class="dropdown-menu dropdown-menu-lg-end"
                                aria-labelledby="navbarDropdownLogInRegister">
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Register">Register</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Login">Login</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link mx-2 dropdown-toggle" href="#" id="navbarDropdownLogInRegister"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Account
                                </a>
                                <ul class="dropdown-menu dropdown-menu-lg-end"
                                aria-labelledby="navbarDropdownLogInRegister">
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Logout">Logout (@User.Identity.Name)</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Index">User Panel</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - uhrenWelt - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
