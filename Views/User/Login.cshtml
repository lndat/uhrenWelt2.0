@model uhrenWelt.ViewModels.User.LoginViewModel

<h3 class="text-center">Login</h3>

<form method="post" action="/User/Login">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-outline col-5" style="margin:0 auto;">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" type="email" class="form-control" />
    </div>
    <div class="text-center mb-2">
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>
    <div class="form-outline col-5" style="margin:0 auto;">
        <label asp-for="@Model.Password"></label>
        <input asp-for="@Model.Password" type="password" class="form-control" />
    </div>
    <div class="text-center mb-2">
        <span class="text-danger" asp-validation-for="@Model.Password"></span>
    </div>
    <div class="col d-flex justify-content-center">
        <div class="form-check">
            <label asp-for="@Model.RememberMe"></label>
            <input class="form-check-input" type="checkbox" asp-for="@Model.RememberMe" />
        </div>
    </div>
    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-block mb-4">Login</button>
    </div>
    <div class="text-center mt-2">
        <p>Not a member? <a href="@Url.Action("Register", "User")">Register</a></p>            
        <p>@Html.ActionLink("Forgot your password?", "ForgotPassword")</p>
    </div>
</form>