@model uhrenWelt.ViewModels.User.ForgotPasswordViewModel

<h3 class="text-center">Reset your password</h3>
<form method="post" action="/User/ForgotPassword">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-outline col-5" style="margin:0 auto;">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" type="email" class="form-control" />
    </div>
    <div class="text-center mb-2">
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>
    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-block mb-4">Email link</button>
    </div>
</form>