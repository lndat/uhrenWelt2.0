@model uhrenWelt.ViewModels.Order.OrderViewModel

@{
  Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
  integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

<div class="row">
  <div class="col-6 text-start my-5">
    <p>@Model.FirstName @Model.LastName</p>
    <p>@Model.Street</p>
    <p>@Model.Zip @Model.City</p>
  </div>
  <div class="col-12 text-end mb-5">
    <p>UhrenWelt GmbH</p>
    <p>Musterstraße 13</p>
    <p>1220 Wien</p>
  </div>
</div>
<br>
<div class="row">
  <div class="col-lg-6">
    <h3 class="text-start">OrderID: @Model.OrderId</h3>
  </div>
  <div class="col-lg-6">
    <h3 class="text-end">@DateTime.Now.ToShortDateString()</h3>
  </div>
</div>
<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="text-start">Productname</th>
        <th class="text-start">Unit price</th>
        <th class="text-start">Quantity</th>
        <th class="text-end">Line price</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var orderLine in Model.OrderLines)
      {
        <tr>
          <td>@orderLine.Name</td>
          <td>@orderLine.NetUnitPrice</td>
          <td>@($"{orderLine.Quantity}x")</td>
          <td class="text-end">@orderLine.LinePrice</td>
        </tr>
      }
    </tbody>
  </table>
</div>
<div class="row">
</div>
<div>
  <table class="table">
    <thead>
      <tr>
        <th class="text-end">Total price</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="text-end">@Model.PriceTotal</td>
      </tr>
    </tbody>
  </table>
</div>
